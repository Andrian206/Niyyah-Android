<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <!-- Checkbox -->
    <CheckBox
        android:id="@+id/cb_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/purple_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Task Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cb_task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Task Title -->
        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/inter_semibold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Berangkat Kuliah" />

        <!-- Task Description (optional) -->
        <TextView
            android:id="@+id/tv_task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/purple_light"
            android:textSize="12sp"
            android:fontFamily="@font/inter_regular"
            android:maxLines="2"
            android:ellipsize="end"
            android:visibility="gone"
            tools:text="Miawmiawmiawmiaw miawmiaw"
            tools:visibility="visible" />

        <!-- Task Time -->
        <TextView
            android:id="@+id/tv_task_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/purple_light"
            android:textSize="11sp"
            android:fontFamily="@font/inter_regular"
            tools:text="Today, 7:00 A.M" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
