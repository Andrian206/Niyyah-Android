<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".ui.auth.RegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_niyyah_purple"
            android:contentDescription="@string/app_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sign up Title -->
        <TextView
            android:id="@+id/tv_sign_up_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="32dp"
            android:text="@string/sign_up_your_account"
            android:textColor="@color/purple_dark"
            android:textSize="28sp"
            android:fontFamily="@font/inter_bold"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/iv_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="32dp"
            android:text="@string/create_an_account_to_continue"
            android:textColor="@color/purple_light"
            android:textSize="14sp"
            android:fontFamily="@font/inter_regular"
            app:layout_constraintTop_toBottomOf="@id/tv_sign_up_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- First Name & Last Name Row -->
        <LinearLayout
            android:id="@+id/ll_name_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="32dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- First Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name"
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_medium" />

                <EditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/bg_edittext_border"
                    android:hint=""
                    android:inputType="textPersonName"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular" />

            </LinearLayout>

            <!-- Last Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_name"
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_medium" />

                <EditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/bg_edittext_border"
                    android:hint=""
                    android:inputType="textPersonName"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular" />

            </LinearLayout>

        </LinearLayout>

        <!-- Email Label -->
        <TextView
            android:id="@+id/tv_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:text="@string/email"
            android:textColor="@color/purple_dark"
            android:textSize="14sp"
            android:fontFamily="@font/inter_medium"
            app:layout_constraintTop_toBottomOf="@id/ll_name_row"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Email Input -->
        <FrameLayout
            android:id="@+id/fl_email"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/bg_edittext_border"
            app:layout_constraintTop_toBottomOf="@id/tv_email_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_email"
                app:tint="@color/purple_light"
                android:contentDescription="@string/email" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="52dp"
                android:paddingEnd="16dp"
                android:background="@android:color/transparent"
                android:hint=""
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular" />

        </FrameLayout>

        <!-- Password Label -->
        <TextView
            android:id="@+id/tv_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:text="@string/password"
            android:textColor="@color/purple_dark"
            android:textSize="14sp"
            android:fontFamily="@font/inter_medium"
            app:layout_constraintTop_toBottomOf="@id/fl_email"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Password Input -->
        <FrameLayout
            android:id="@+id/fl_password"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/bg_edittext_border"
            app:layout_constraintTop_toBottomOf="@id/tv_password_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_lock"
                app:tint="@color/purple_light"
                android:contentDescription="@string/password" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="52dp"
                android:paddingEnd="52dp"
                android:background="@android:color/transparent"
                android:hint=""
                android:inputType="textPassword"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular" />

            <ImageView
                android:id="@+id/iv_password_toggle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_visibility_off"
                app:tint="@color/purple_light"
                android:contentDescription="@string/password" />

        </FrameLayout>

        <!-- Confirm Password Label -->
        <TextView
            android:id="@+id/tv_confirm_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:text="@string/confirm_password"
            android:textColor="@color/purple_dark"
            android:textSize="14sp"
            android:fontFamily="@font/inter_medium"
            app:layout_constraintTop_toBottomOf="@id/fl_password"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Confirm Password Input -->
        <FrameLayout
            android:id="@+id/fl_confirm_password"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/bg_edittext_border"
            app:layout_constraintTop_toBottomOf="@id/tv_confirm_password_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_lock"
                app:tint="@color/purple_light"
                android:contentDescription="@string/confirm_password" />

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="52dp"
                android:paddingEnd="52dp"
                android:background="@android:color/transparent"
                android:hint=""
                android:inputType="textPassword"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular" />

            <ImageView
                android:id="@+id/iv_confirm_password_toggle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_visibility_off"
                app:tint="@color/purple_light"
                android:contentDescription="@string/confirm_password" />

        </FrameLayout>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btn_sign_up"
            style="@style/buttonPurple"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:text="@string/sign_up"
            app:layout_constraintTop_toBottomOf="@id/fl_confirm_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Already have account -->
        <LinearLayout
            android:id="@+id/ll_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/btn_sign_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_account"
                android:textColor="@color/purple_light"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular" />

            <TextView
                android:id="@+id/tv_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/sign_in"
                android:textColor="@color/purple_medium"
                android:textSize="12sp"
                android:fontFamily="@font/inter_semibold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>