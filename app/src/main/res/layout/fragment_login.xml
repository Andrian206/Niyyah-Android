<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".ui.auth.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Purple Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/bg_purple_rounded_bottom"
            android:paddingHorizontal="30dp"
            android:paddingVertical="42dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/title_get_started"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/get_started_now"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:fontFamily="@font/inter_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title_create_an_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/create_an_account"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_get_started" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Logo -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_niyyah_purple"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintTop_toBottomOf="@id/header_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sign in Title -->
        <TextView
            android:id="@+id/tv_sign_in_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/sign_in_to_your_account"
            android:textColor="@color/purpleD"
            android:textSize="22sp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/iv_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Email Label -->
        <TextView
            android:id="@+id/tv_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:text="@string/email"
            android:textColor="@color/greyMD"
            android:textSize="12sp"
            android:fontFamily="@font/inter_regular"
            app:layout_constraintTop_toBottomOf="@id/tv_sign_in_title"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Email Input -->
        <FrameLayout
            android:id="@+id/fl_email"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/bg_edittext_border"
            app:layout_constraintTop_toBottomOf="@id/tv_email_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_email"
                android:contentDescription="@string/email" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="52dp"
                android:paddingEnd="16dp"
                android:background="@android:color/transparent"
                android:hint=""
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular" />

        </FrameLayout>

        <!-- Password Label -->
        <TextView
            android:id="@+id/tv_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:text="@string/password"
            android:textColor="@color/greyMD"
            android:textSize="12sp"
            android:fontFamily="@font/inter_regular"
            app:layout_constraintTop_toBottomOf="@id/fl_email"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Password Input -->
        <FrameLayout
            android:id="@+id/fl_password"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/bg_edittext_border"
            app:layout_constraintTop_toBottomOf="@id/tv_password_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_lock"
                android:contentDescription="@string/password" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="52dp"
                android:paddingEnd="52dp"
                android:background="@android:color/transparent"
                android:hint=""
                android:inputType="textPassword"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular" />

            <ImageView
                android:id="@+id/iv_password_toggle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_visibility_off"
                android:contentDescription="@string/password" />

        </FrameLayout>

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:text="@string/forgot_your_password"
            android:textColor="@color/purpleD"
            android:textSize="12sp"
            android:fontFamily="@font/inter_medium"
            app:layout_constraintTop_toBottomOf="@id/fl_password"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sign In Button -->
        <Button
            style="@style/buttonA"
            android:id="@+id/btn_sign_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:text="@string/sign_in"
            app:layout_constraintTop_toBottomOf="@id/tv_forgot_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Don't have account -->
        <LinearLayout
            android:id="@+id/ll_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/btn_sign_in"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dont_have_account"
                android:textColor="@color/greyMD"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular" />

            <TextView
                android:id="@+id/tv_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textColor="@color/purpleD"
                android:textSize="12sp"
                android:fontFamily="@font/inter_semibold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>