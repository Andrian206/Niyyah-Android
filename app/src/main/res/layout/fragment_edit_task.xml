<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".ui.task.EditTaskFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Header with Back Arrow -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="@string/edit_task" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/edit_task"
                android:textColor="@color/purpleD"
                android:textSize="18sp"
                android:fontFamily="@font/inter_bold" />

        </LinearLayout>

        <!-- Title Label -->
        <TextView
            android:id="@+id/tv_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:text="@string/title"
            android:textColor="@color/greyMD"
            android:textSize="12sp"
            android:fontFamily="@font/inter_regular"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Title Input -->
        <EditText
            android:id="@+id/et_title"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="32dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bg_edittext_border"
            android:hint=""
            android:inputType="text"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_regular"
            app:layout_constraintTop_toBottomOf="@id/tv_title_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Details Label -->
        <TextView
            android:id="@+id/tv_details_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:text="@string/details"
            android:textColor="@color/greyMD"
            android:textSize="12sp"
            android:fontFamily="@font/inter_regular"
            app:layout_constraintTop_toBottomOf="@id/et_title"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Details Input -->
        <EditText
            android:id="@+id/et_details"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="32dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:background="@drawable/bg_edittext_border"
            android:hint=""
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_regular"
            app:layout_constraintTop_toBottomOf="@id/tv_details_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Due Date & Time Row -->
        <LinearLayout
            android:id="@+id/ll_date_time_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/et_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Due Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/due_date"
                    android:textColor="@color/greyMD"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_regular" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_edittext_border">

                    <EditText
                        android:id="@+id/et_due_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="40dp"
                        android:background="@android:color/transparent"
                        android:hint=""
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_regular" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_calendar"
                        android:contentDescription="@string/due_date" />

                </FrameLayout>

            </LinearLayout>

            <!-- Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textColor="@color/greyMD"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_regular" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_edittext_border">

                    <EditText
                        android:id="@+id/et_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="40dp"
                        android:background="@android:color/transparent"
                        android:hint=""
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_regular" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_clock"
                        android:contentDescription="@string/time" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Repeat Label -->
        <TextView
            android:id="@+id/tv_repeat_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:text="@string/repeat"
            android:textColor="@color/greyMD"
            android:textSize="12sp"
            android:fontFamily="@font/inter_regular"
            app:layout_constraintTop_toBottomOf="@id/ll_date_time_row"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Repeat Dropdown -->
        <FrameLayout
            android:id="@+id/fl_repeat"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/bg_edittext_border"
            app:layout_constraintTop_toBottomOf="@id/tv_repeat_label"
            app:layout_constraintStart_toStartOf="parent">

            <Spinner
                android:id="@+id/spinner_repeat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="12dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_dropdown"
                android:contentDescription="@string/repeat" />

        </FrameLayout>

        <!-- Buttons Row (Delete & Save) -->
        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginHorizontal="32dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/fl_repeat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_button_delete"
                android:src="@drawable/ic_delete"
                android:scaleType="center"
                android:contentDescription="@string/delete" />

            <!-- Save Button -->
            <Button
                style="@style/buttonA"
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="@string/save" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
